{
    "manifest_version": 3,
    "name": "remoteprez",
    "version": "1.1.0",
    "default_locale": "en",
    "description": "__MSG_EXT_DESCRIPTION__",
    "background": {
        "scripts": [ "background.js" ]
    },
    "permissions": [
        "tabs", "http://*/*"
    ],
    "browser_action": {
        "name": "remoteprez",
        "default_icon": "remoteprez.png",
        "default_title": "__MSG_EXT_TITLE__",
        "icons": [ "remoteprez.png" ]
    },
    "content_security_policy": "default-src 'none'; script-src 'self'"
}

